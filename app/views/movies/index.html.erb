<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 offset-sm-3">
      <%= form_tag movies_path, method: :get do %>
        <%= text_field_tag :query, params[:query], placeholder: "enter a movie", class: "form-control" %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
      <% @movies.each do |movie| %>
        <h3><%= movie.title %></h3>
        <p><%= movie.syllabus %></p>
      <% end %>
    </div>
  </div>
</div>